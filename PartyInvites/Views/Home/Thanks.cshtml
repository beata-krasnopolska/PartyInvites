@model PartyInvites.Models.GuestResponse
@{
        Layout = null;
    }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width" />
    <title>Thank you</title>
</head>
<body>
    <p>
        <h1>Thank you, @Model.Name!</h1>
        @if (Model.WillAttend == true)
        {
            @:We are happy that you come!
        }
        else
        {
            @: Sorry to hear that
        }
    </p>
    <p>Click<a asp-action="ListResponses">here</a>, to show guest list.</p>
</body>
</html>