
@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>RSVP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-l" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Name and Surname:</label>
                    <input asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">E-mail address:</label>
                    <input asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Phone number:</label>
                    <input asp-for="Phone" />
                </div>
                <div class="form-group">
                    <label>Would you like to come?</label>
                    <select asp-for="WillAttend">
                        <option value="">Pick option</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Send RSVP</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
